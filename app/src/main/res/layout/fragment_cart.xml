<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cart">

    <RelativeLayout
        android:id="@+id/cart"
        android:layout_width="410dp"
        android:layout_height="844dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/title"
            android:layout_width="87dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Cart"
            android:textColor="@color/black"
            android:textSize="32dp" />

        <Button
            android:id="@+id/checkout"
            android:layout_width="343dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="540dp"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:text="Check out"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/item1"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHAWL"
            android:fontFamily="@font/poppins_bold"
            android:textSize="18dp"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="160dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Color:Cream"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="150dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/item2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="220dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAREE"
            android:fontFamily="@font/poppins_bold"
            android:textSize="18dp"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="160dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Color:Pink"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="300dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:800"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="160dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:600"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="160dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL AMOUNT: 2800"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="510dp"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"/>

    </RelativeLayout>


</FrameLayout>